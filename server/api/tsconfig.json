{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "module": "commonjs",
    "target": "ES2021",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "ignore.ts"],
  "exclude": ["node_modules"]
}
